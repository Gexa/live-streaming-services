<?xml version="1.0"?>
<cross-domain-policy>
    <site-control permitted-cross-domain-policies="master-only"/>
    <allow-access-from domain="example.com"/>
    <allow-access-from domain="*.example.com"/>
    <allow-access-from domain="localhost"/>
    <allow-http-request-headers-from domain="localhost" headers="localhost"/>
    <allow-http-request-headers-from domain="example.com" headers="example.com"/>
    <allow-http-request-headers-from domain="*.example.com" headers="*.example.com"/>
</cross-domain-policy>